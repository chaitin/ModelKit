{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist"
  },
  "include": ["src/index.ts", "src/pages/model/components/modelModal.tsx", "src/api/**/*", "src/utils/**/*", "src/components/**/*", "src/pages/model/constant.ts"],
  "exclude": ["src/main.tsx", "src/App.tsx", "**/*.test.*", "**/*.spec.*"]
}